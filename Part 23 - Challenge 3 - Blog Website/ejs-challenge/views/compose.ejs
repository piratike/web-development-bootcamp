<%- include('partials/header') %>

<h1>Compose</h1>

<form action="/compose" method="post">

    <div style="margin-bottom: 5px;">
        <label for="newPostTitle" class="form-label">Title</label>
        <input type="text" class="form-control" name="newPostTitle">
    </div>
    <div style="margin-bottom: 5px;">
        <label for="newPost" class="form-label">Post</label>
        <textarea class="form-control" name="newPostBody" rows="5"></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Publish</button>

</form>

<%- include('partials/footer') %>
